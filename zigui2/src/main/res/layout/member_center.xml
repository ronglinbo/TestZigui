<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical" >

    <!-- 会员中心 -->

    <include
        android:id="@+id/my_title"
        layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/item_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/bord_space_between" >

                <com.wcyc.zigui2.widget.RoundImageView
                    android:id="@+id/riv_child_icon"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    weichuyoucai:src="@drawable/defaulticon"
                    weichuyoucai:type="circle" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_child_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王冬冬"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/four_text_type" />

                    <TextView
                        android:id="@+id/tv_member_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:text="会员到期日  2014年12月31日"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/four_text_type" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginRight="-50dp"
                     >
                <Button
                    android:id="@+id/bt_renewal_fee"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dip"
                    android:layout_weight="0"
                    android:background="@drawable/bg_red_oval"
                    android:text="在线支付"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/four_text_type" />
                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/bt_pay_card"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dip"
                    android:layout_weight="0"
                    android:background="@drawable/bg_red_oval"
                    android:text="卡充值"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/four_text_type" />
                 </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="20dip"
                android:orientation="vertical"
                android:padding="0dip" >

                <RelativeLayout
                    android:id="@+id/rl_payment_record"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/teacher_firstpager_ll_height"
                    android:background="@drawable/border_corn_up_clickable"
                    android:clickable="true"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/iv_icon_payment_record"
                        android:layout_width="@dimen/teacher_my_icon_hight"
                        android:layout_height="@dimen/teacher_my_icon_hight"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/nomar_margin"
                        android:src="@drawable/icon_payment_record" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/nomar_margin"
                        android:layout_toRightOf="@+id/iv_icon_payment_record"
                        android:text="缴费记录"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/three_text_type" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/my_corner" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_package_manage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/teacher_firstpager_ll_height"
                    android:background="@drawable/border_no_corner_clickable"
                    android:clickable="true"
                    android:gravity="center_vertical" 
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_icon_package_manage"
                        android:layout_width="@dimen/teacher_my_icon_hight"
                        android:layout_height="@dimen/teacher_my_icon_hight"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/nomar_margin"
                        android:src="@drawable/icon_package_manage"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/nomar_margin"
                        android:layout_toRightOf="@+id/iv_icon_package_manage"
                        android:text="套餐管理"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/three_text_type" 
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/my_corner"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_invite_attention"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/teacher_firstpager_ll_height"
                    android:background="@drawable/border_corn_down_clickable"
                    android:clickable="true"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/iv_icon_invitation"
                        android:layout_width="@dimen/teacher_my_icon_hight"
                        android:layout_height="@dimen/teacher_my_icon_hight"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/nomar_margin"
                        android:src="@drawable/icon_invitation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/nomar_margin"
                        android:layout_toRightOf="@+id/iv_icon_invitation"
                        android:text="邀请关注"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/three_text_type" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/my_corner" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>