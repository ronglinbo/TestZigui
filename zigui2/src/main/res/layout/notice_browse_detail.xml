<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/teacher_margin"
    android:paddingRight="@dimen/teacher_margin"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@drawable/shape_pop">
        <include
            android:id="@+id/my_title"
            layout="@layout/new_title"/>
        <ScrollView
            android:id="@+id/scrollView"
            android:background="@drawable/shape_pop_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/my_title">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="@dimen/content_to_bord"
                android:paddingRight="@dimen/content_to_bord">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/hint_text_size"
                    android:textColor="@color/font_gray"
                    android:text="说明：红色标记表示该老师或该学生的家长未读本通知内容"
                    android:paddingBottom="@dimen/content_to_bord"/>
                <TextView
                    android:id="@+id/show_teacher"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:padding="@dimen/nomar_margin"
                    android:textColor="@color/font_gray"
                    android:background="@color/background_common"
                    android:text="老师："/>

                <com.wcyc.zigui2.newapp.widget.ExpandGridView
                    android:id="@+id/teacherlist"
                    android:numColumns="3"
                    android:gravity="center"
                    android:verticalSpacing="5dp"
                    android:paddingLeft="@dimen/nomar_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_height="@dimen/nomar_margin"
                    android:layout_width="match_parent"/>
                <TextView
                    android:id="@+id/show_student"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:padding="@dimen/nomar_margin"
                    android:background="@color/background_common"
                    android:textColor="@color/font_gray"
                    android:text="学生："/>

                <com.wcyc.zigui2.newapp.widget.ExpandGridView
                    android:id="@+id/studentlist"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:gravity="center"
                    android:paddingLeft="@dimen/nomar_margin"
                    android:verticalSpacing="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>