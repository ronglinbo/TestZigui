<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_lightyellow"
    android:orientation="vertical" >

    <include
        android:layout_height="0dip"
        android:layout_weight="0"
        layout="@layout/new_title" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="20dp"
        android:background="@color/line_darkyellow" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/revise_email_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:paddingLeft="20dp"
            android:digits="@string/rule_password"
            android:layout_weight="1"
            android:textColorHint="#cccccc"
            android:hint="请输入邮箱" />

        <ImageView
            android:id="@+id/revise_email_et_delete_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:src="@drawable/close"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_darkyellow" />

    <Button
        android:id="@+id/revise_email_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_button_height"
        android:layout_marginLeft="@dimen/nomar_margin"
        android:layout_marginRight="@dimen/nomar_margin"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_selector"
        android:text="@string/commit_zgd"
        android:textColor="@color/font_white"
        android:textSize="@dimen/second_text_type" />

</LinearLayout>