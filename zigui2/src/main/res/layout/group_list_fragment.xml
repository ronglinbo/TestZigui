<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dh="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_list_rlt"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include android:id="@+id/groupList_title"
        layout="@layout/title"/>

    <RelativeLayout
        android:id="@+id/group_rlt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/group_list_search_rlt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:paddingBottom="5dp"
            android:visibility="invisible" >

            <EditText
                android:id="@+id/search_et"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@drawable/inputlayout_bg"
                android:drawableLeft="@drawable/list_body_search_n"
                android:focusable="true"
                android:gravity="left|center_vertical"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/black_gray"
                android:textColorHint="@color/black_gray"
                android:text="compile files('libs/IDpsdkCore.jar')     compile files('libs/IPlaySDK.jar')" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_list_search_rlt"
            android:layout_centerInParent="true">

            <com.wcyc.zigui2.newapp.widget.RefreshListView
                android:id="@+id/group_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/font_white"
                android:listSelector="@drawable/item_selector"
                android:cacheColorHint="#00000000"
                android:divider="@color/white"
                android:dividerHeight="2dp"/>

        </RelativeLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/grouplist_waitting_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/no_moniter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="184dp"
            android:src="@drawable/moniter"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_marginTop="31dp"
            android:gravity="center_horizontal"
            android:text="@string/no_moniter"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/four_text_type"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/search_rlt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray"
        android:visibility="gone" >

        <AutoCompleteTextView
            android:id="@+id/main_search_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/inputlayout_bg"
            android:completionThreshold="1"
            android:drawableLeft="@drawable/list_body_search_n"
            android:dropDownHeight="wrap_content"
            android:dropDownVerticalOffset="3dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black_gray" />

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:visibility="gone" />

        <!--
             <ListView 
	    	android:id="@+id/search_group_list"
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:layout_above="@+id/confirm_btn"
	    	android:layout_below="@id/main_search_et"
	    	/>
        -->

        <TextView
            android:id="@+id/search_no_data_tv"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/confirm_btn"
            android:layout_below="@id/main_search_et"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>