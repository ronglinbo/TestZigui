<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical" >

    <include
        layout="@layout/new_title2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <View
            android:id="@+id/dd"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/line_darkyellow"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/dd"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.wcyc.zigui2.widget.SpinnerButton
                android:id="@+id/spinner_butt_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="50dp"
                android:text="班级"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:src="@drawable/new_down1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/dd"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.wcyc.zigui2.widget.SpinnerButton
                android:id="@+id/spinner_butt_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="right|center_vertical"
                android:text="科目"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:src="@drawable/new_down1" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_hight"
        android:background="@color/line_darkyellow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/ed_homework"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/backgroud_white"
            android:gravity="left"
            android:maxLength="500"
            android:hint="请输入作业内容..."
            android:textColorHint="#cccccc"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <ImageView
            android:id="@+id/ed_homework_delete_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:src="@drawable/close"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroud_white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:layout_marginLeft="15dp"
            android:background="@color/line_darkyellow" />

    </LinearLayout>


    <!-- 图片选取 -->

    <com.wcyc.zigui2.widget.ExpandGridView
        android:id="@+id/homework_addiv_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/font_white"
        android:drawSelectorOnTop="false"
        android:fadeScrollbars="false"
        android:fadingEdge="none"
        android:gravity="center_vertical"
        android:listSelector="@color/font_white"
        android:numColumns="4"
        android:padding="10dp"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/nomar_margin" />

</LinearLayout>