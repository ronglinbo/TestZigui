<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_lightyellow"
    android:orientation="vertical" >

    <include
        android:layout_height="0dip"
        android:layout_weight="0"
        layout="@layout/new_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_hight"
        android:background="@color/line_darkyellow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_hight"
        android:layout_marginTop="20dp"
        android:background="@color/line_darkyellow" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <TextView 
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:text="旧密码"/>

        <EditText
            android:id="@+id/revise_password_old"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/rule_password"
            android:hint="请输入旧密码"
            android:textColorHint="#cccccc"
            android:textSize="15sp"
            android:maxLength="20"
            android:inputType="textWebPassword" />

        <ImageView
            android:id="@+id/revise_password_old_delete_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:src="@drawable/close"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_hight"
        android:layout_marginLeft="15dp"
        android:background="@color/line_darkyellow" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView 
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:text="新密码"/>
        
        <EditText
            android:id="@+id/revise_password_new_a"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/rule_password"
            android:hint="请输入新密码"
            android:textSize="15sp"
            android:textColorHint="#cccccc"
            android:maxLength="20"
            android:inputType="textWebPassword" />

        <ImageView
            android:id="@+id/revise_password_new_a_delete_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:src="@drawable/close"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_hight"
        android:layout_marginLeft="15dp"
        android:background="@color/line_darkyellow" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <TextView 
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:text="重复密码"
            />

        <EditText
            android:id="@+id/revise_password_new_b"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/rule_password"
            android:hint="请再次输入新密码"
            android:textSize="15sp"
            android:textColorHint="#cccccc"
            android:maxLength="20"
            android:inputType="textWebPassword" />

        <ImageView
            android:id="@+id/revise_password_new_b_delete_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:src="@drawable/close"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_hight"
        android:background="@color/line_darkyellow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#999999"
        android:text="6到20数字、字母、符号，不能包含空格" />

    <Button
        android:id="@+id/revise_password_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_button_height"
        android:layout_marginLeft="@dimen/nomar_margin"
        android:layout_marginRight="@dimen/nomar_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_selector"
        android:text="@string/revise_password"
        android:textColor="@color/font_white"
        android:textSize="@dimen/second_text_type" />

</LinearLayout>