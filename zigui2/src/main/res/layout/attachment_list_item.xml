<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gray_round_rect"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/iv_attach_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/nomar_margin"
        android:src="@drawable/list_icon_tupian" />
    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/list_icon_shanchu"/>
    <TextView
        android:id="@+id/tv_attach_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/nomar_margin"
        android:layout_toLeftOf="@id/iv_del"
        android:text="1.2M"
        android:textColor="@color/font_gray"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/attach_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_attach_icon"
        android:layout_toLeftOf="@id/tv_attach_size"
        android:text="图片"
        android:textColor="@color/font_black"
        android:singleLine="true"
        android:ellipsize="start"
        android:textSize="16sp"/>



</RelativeLayout>