<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_firstpager_my_enroll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/teacher_firstpager_ll_height"
    android:background="@drawable/item_selector"
    android:gravity="center_vertical" >

    <!-- 家长我的界面的小孩选择续费item -->

    <ImageView
        android:id="@+id/iv_child_my_icon"
        android:layout_width="@dimen/teacher_my_icon_hight"
        android:layout_height="@dimen/teacher_my_icon_hight"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/nomar_margin"
        android:src="@drawable/my_lv_icon_8" />

    <TextView
        android:id="@+id/child_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/nomar_margin"
        android:layout_toRightOf="@+id/iv_child_my_icon"
        android:text="@string/child_name_member_center"
        android:textColor="@color/font_black"
        android:textSize="@dimen/three_text_type" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_enroll_arraw"
        android:layout_toRightOf="@+id/child_name"
        android:orientation="horizontal" 
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="@dimen/nomar_margin"
            android:text="王冬冬"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/four_text_type" />

        <TextView
            android:id="@+id/tv_child_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/nomar_margin"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="2014-09-31到期"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/four_text_type" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_enroll_arraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/my_corner" />

</RelativeLayout>