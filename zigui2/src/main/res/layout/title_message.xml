<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_top_bar"
    android:gravity="center_vertical">

	<com.wcyc.zigui2.widget.RoundImageView
        android:id="@+id/my_information_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        weichuyoucai:src="@drawable/pho_touxiang"
        weichuyoucai:type="circle"
		android:gravity="center_vertical"
		android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/content_to_bord"/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/my_information_icon"
		android:layout_toLeftOf="@id/title2_spinner"
		android:layout_centerVertical="true"
		android:gravity="center_vertical"
		android:orientation="vertical">
		<TextView
			android:id="@+id/person_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_marginLeft="@dimen/nomar_margin"
			android:text="张三"
			android:textColor="@color/font_color"
			android:textSize="@dimen/item_desc_size"/>
		<TextView
			android:id="@+id/school_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/person_info"
			android:layout_marginLeft="@dimen/nomar_margin"
			android:textColor="@color/font_gray_color"
			android:text="惟楚有才网络股份有限公司"
			android:singleLine="true"
			android:ellipsize="start"
			android:textSize="@dimen/hint_text_size"/>
	</LinearLayout>
	<com.wcyc.zigui2.widget.SpinnerButton
        android:id="@+id/title2_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/navpress_down_selector"
        android:inputType="textMultiLine"
        android:singleLine="true"
        android:textColor="@drawable/title_text_selector"
        android:textSize="@dimen/four_text_type" 
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/content_to_bord"
        android:background="@color/transparent"/>

</RelativeLayout>