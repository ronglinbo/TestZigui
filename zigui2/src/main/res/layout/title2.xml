<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/title_bg_color"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <!-- 老师端头标题 -->

    <LinearLayout
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal"
         >

        <ImageView
            android:id="@+id/title_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_arrow_iv"
            android:src="@drawable/top_back1" />

        <Button
            android:id="@+id/title2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text="标题"
            android:textColor="@color/font_white"
            android:textSize="@dimen/titleback_text_type" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title2_town"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="@dimen/nomar_margin"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal" >

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="#80d7f8" />

        <ImageView
            android:id="@+id/title2_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/notifice_title_icon"
            android:visibility="invisible" />

        <com.wcyc.zigui2.widget.SpinnerButton
            android:id="@+id/title2_spinner"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/font_blue"
            android:drawablePadding="@dimen/nomar_margin"
            android:drawableRight="@drawable/titlepress_down_selector"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:textColor="@drawable/title_text_selector"
            android:textSize="@dimen/four_text_type" />
    </LinearLayout>

</LinearLayout>