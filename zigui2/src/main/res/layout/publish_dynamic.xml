<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 老师端  班级动态的发布界面 -->

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroud_darktyellow" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 基本信息 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/publish_dynamic_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/nomar_margin"
                    android:background="@color/backgroud_white"
                    android:gravity="start"
                    android:hint="@string/notification_content"
                    android:inputType="textMultiLine"
                    android:maxLength="1000"
                    android:minHeight="100dp"
                    android:padding="10dp"
                    android:singleLine="false" />
            </LinearLayout>

            <!-- 图片选取 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/backgroud_white"
                android:layout_marginTop="@dimen/nomar_margin"
                android:orientation="horizontal" >

                <com.wcyc.zigui2.widget.ExpandGridView
                    android:id="@+id/publish_dynamic_addiv_gv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/nomar_margin"
                    android:layout_marginRight="@dimen/nomar_margin"
                    android:background="@color/font_white"
                    android:drawSelectorOnTop="false"
                    android:fadeScrollbars="false"
                    android:fadingEdge="none"
                    android:gravity="center_vertical"
                    android:listSelector="@color/font_white"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/nomar_margin" />
            </LinearLayout>

            <!-- 确定按钮 -->
            <Button
                android:id="@+id/publish_dynamic_commit_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_button_height"
                android:layout_marginBottom="@dimen/nomar_margin"
                android:layout_marginLeft="@dimen/myset_nomar_padding"
                android:layout_marginRight="@dimen/myset_nomar_padding"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:background="@drawable/login_selector"
                android:text="@string/notification_commit_btn"
                android:textColor="@color/font_white"
                android:textSize="@dimen/second_text_type" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>