<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical" >

    <!-- 套餐管理 -->

    <include
        android:id="@+id/my_title"
        layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="@dimen/bord_space_between" >

            <ImageView
                android:id="@+id/iv_icon_payment_record"
                android:layout_width="@dimen/teacher_my_icon_hight"
                android:layout_height="@dimen/teacher_my_icon_hight"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/nomar_margin"
                android:src="@drawable/icon_package_manage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/nomar_margin"
                android:layout_toRightOf="@+id/iv_icon_payment_record"
                android:text="家庭套餐"
                android:textColor="@color/font_black"
                android:textSize="@dimen/four_text_type" />

            <!-- 没有开通家庭套餐的情况 -->

            <LinearLayout
                android:id="@+id/ll_closed_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/nomar_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="你尚未开通家庭套餐"
                    android:textColor="@color/font_darkgray"
                    android:textSize="@dimen/four_text_type" />

                <Button
                    android:id="@+id/bt_open_package"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_green_oval"
                    android:gravity="center"
                    android:text="开通"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/four_text_type" />
            </LinearLayout>

            <!-- 已开通家庭套餐的情况 -->

            <LinearLayout
                android:id="@+id/ll_opened_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/nomar_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_gray_normal"
                    android:gravity="center"
                    android:text="已开通"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/four_text_type" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:background="@color/line_darkyellow" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:paddingLeft="@dimen/bord_space_between" >

            <TextView
                android:id="@+id/tv_title_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="家庭套餐"
                android:textColor="@color/font_black"
                android:textSize="@dimen/second_text_type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_title_package"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tv_title_package"
                android:text="费用  5元/月"
                android:textColor="@color/font_darkgray"
                android:textSize="@dimen/four_text_type" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_opened_package_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:paddingLeft="@dimen/bord_space_between"
                android:paddingRight="@dimen/bord_space_between" >

                <TextView
                    android:id="@+id/validity_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="套餐有效期"
                    android:textColor="@color/font_darkgray"
                    android:textSize="@dimen/four_text_type" />

                <TextView
                    android:id="@+id/tv_validity_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/validity_period"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/validity_period"
                    android:text="2015年8月31日"
                    android:textColor="@color/font_darkgray"
                    android:textSize="@dimen/four_text_type" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/validity_period"
                    android:layout_below="@+id/validity_period"
                    android:layout_marginTop="20dp"
                    android:text="@string/notice_opened_package"
                    android:textColor="@color/font_darkgray"
                    android:textSize="@dimen/four_text_type" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_closed_package_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/bord_space_between"
            android:paddingRight="@dimen/bord_space_between"
            android:visibility="gone" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/notice_closed_package"
                android:textColor="@color/font_black"
                android:textSize="@dimen/four_text_type" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>