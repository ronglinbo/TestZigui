<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/new_title" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/title"
        android:id="@+id/searchbar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:focusable="true"
        android:paddingBottom="@dimen/bord_space_between"
        android:paddingLeft="@dimen/content_to_bord"
        android:paddingRight="@dimen/content_to_bord">

        <Button
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_search_btn"
            android:drawableLeft="@drawable/ellipse"
            android:hint="姓名/姓名首字母/手机号"
            android:paddingLeft="65dp"
            android:textSize="@dimen/field_textsize" />
    </LinearLayout>
    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_below="@id/searchbar">-->
    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical">-->
    <!--</LinearLayout>-->
    <!--</ScrollView>-->
    <ExpandableListView
        android:id="@+id/group_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchbar"
        android:childDivider="@drawable/list_item_divider"
        android:drawSelectorOnTop="false" />

    <View
        android:id="@+id/blank1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/group_listview" />

    <ExpandableListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank1"
        android:childDivider="@drawable/list_item_divider"
        android:drawSelectorOnTop="false" />

    <TextView
        android:id="@+id/tv_no_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="10dip"
        android:drawableTop="@drawable/shuju_no"
        android:textColor="@color/font_darkgray"
        android:textSize="@dimen/three_text_type"
        android:visibility="gone" />
</RelativeLayout>    