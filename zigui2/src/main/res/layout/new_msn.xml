<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical">

    <include layout="@layout/new_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/mydetail_content_margin_right"
        android:background="@color/line_darkyellow" />

    <!-- 接收消息 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:background="@color/backgroud_white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/zgd_margin_right"
            android:text="@string/myset_message_text"
            android:textColor="@color/font_black"
            android:textSize="@dimen/three_text_type" />

        <com.wcyc.zigui2.utils.SlipButton
            android:id="@+id/myset_message_btn"
            android:layout_width="@dimen/SlipButton_width"
            android:layout_height="@dimen/SlipButton_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-35dp"
            android:layout_marginTop="@dimen/SlipButton_margin_top" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/zgd_margin_right"
        android:background="@color/line_darkyellow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:background="@color/backgroud_white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/zgd_margin_right"
            android:text="@string/myset_message_voice_text"
            android:textColor="@color/font_black"
            android:textSize="@dimen/three_text_type" />

        <com.wcyc.zigui2.utils.SlipButton
            android:id="@+id/myset_message_voice_btn"
            android:layout_width="@dimen/SlipButton_width"
            android:layout_height="@dimen/SlipButton_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-35dp"
            android:layout_marginTop="@dimen/SlipButton_margin_top" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/zgd_margin_right"
        android:background="@color/line_darkyellow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:background="@color/backgroud_white"
        android:gravity="center_vertical">

        <com.wcyc.zigui2.utils.SlipButton
            android:id="@+id/myset_message_shake_btn"
            android:layout_width="@dimen/SlipButton_width"
            android:layout_height="@dimen/SlipButton_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-35dp"
            android:layout_marginTop="@dimen/SlipButton_margin_top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/zgd_margin_right"
            android:text="@string/myset_message_shake_text"
            android:textColor="@color/font_black"
            android:textSize="@dimen/three_text_type" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_darkyellow" />


</LinearLayout>