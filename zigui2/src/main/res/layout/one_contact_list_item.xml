<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textColor="@color/font_black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_hight"
        android:layout_below="@+id/alpha"
        android:gravity="center_vertical" >

        <com.wcyc.zigui2.widget.RoundImageView
            android:id="@+id/contact_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/nomar_margin"
            weichuyoucai:src="@drawable/defaulticon"
            weichuyoucai:type="circle" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/nomar_margin"
            android:layout_toRightOf="@+id/contact_item_icon"
            android:textColor="@color/font_black"
            android:textSize="@dimen/three_text_type" />

        <CheckBox
            android:id="@+id/contact_item_flag"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginRight="@dimen/contact_item_flag_margin_right"
            android:focusableInTouchMode="false"
            android:gravity="right" 
            android:visibility="gone"/>
          <TextView
            android:id="@+id/contact_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginRight="@dimen/contact_item_flag_margin_right"
            android:focusableInTouchMode="false"
            android:gravity="right" />
        

    </RelativeLayout>

</RelativeLayout>