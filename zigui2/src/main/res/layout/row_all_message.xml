<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:id="@+id/list_item_layout"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" >

        <com.wcyc.zigui2.widget.RoundImageView
            android:id="@+id/avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/content_to_bord"
            android:scaleType="fitXY"
            weichuyoucai:src="@drawable/pho_touxiang"
            weichuyoucai:type="circle" />
        <ImageView
            android:id="@+id/unread_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/avatar"
            android:visibility="gone"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/msg"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/avatar_container"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/content_to_bord"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/first_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/time"
                android:layout_alignParentLeft="true"
                android:text="消息"
                android:textColor="@color/font_color"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/light_gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_below="@id/first_line">
            <ImageView
                android:id="@+id/msg_state"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/msg_state_fail_resend"
                android:visibility="gone" />

            <TextView
                android:id="@+id/message"
                android:layout_toLeftOf="@id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/font_gray_color"
                android:text="测试测试测试测试测试测试测试测试测试测试测试测试"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>