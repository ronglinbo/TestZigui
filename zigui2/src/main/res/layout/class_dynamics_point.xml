<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/message_support_count_icon"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/list_icon_pinglun2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/authorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/four_text_type"
            android:textColor="#01aef0" />

        <TextView
            android:id="@+id/authorname_reply_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/authorname"
            android:visibility="gone"
            android:text="回复"
            android:textSize="@dimen/four_text_type" />

        <TextView
            android:id="@+id/authorname_to_authorname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/authorname_reply_tv"
            android:visibility="gone"
            android:text="3"
            android:textSize="@dimen/four_text_type"
            android:textColor="#01aef0" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/four_text_type"
            android:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="删除"
            android:textColor="#01aef0"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>