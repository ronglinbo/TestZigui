<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parentcommittee_item_selector"
    android:orientation="vertical" 
    android:paddingTop="0dp"
    android:paddingBottom="8dp"
    >
    <!-- 家长委员会推荐listview条目     和老师详情页面推荐资源是公用 -->
	<RelativeLayout 
	    android:layout_width="match_parent"
    	android:layout_height="20dp"
	    >
	    <TextView 
	        android:id="@+id/child_name_text"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentRight="true"
    		android:text="蜡笔小新"
    		android:textColor="@color/font_white"
    		android:background="@drawable/child_name_bg"
    		android:gravity="center"
	        />
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"
	    >
	    <ImageView
	        android:id="@+id/resource_iv"
	        android:layout_width="100dp"
	        android:layout_height="75dp"
	        android:src="@drawable/sour_default" 
	        android:layout_marginLeft="10dp"
	        />
	     <LinearLayout
			 android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="15dp"
	         android:orientation="vertical"
	         >
	         <TextView
	             android:id="@+id/resource_tv_title"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="语文知识点突破"
	             android:textColor="@color/font_darkgray"
	             android:textSize="@dimen/mycollect_text_type" />
	
	         <LinearLayout
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
				 android:layout_marginTop="@dimen/font_to_font_diver_my_collect"
	             android:orientation="horizontal" >
	
	             <TextView
					 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="主       讲"
	                 android:textColor="@color/font_darkgray"
	                 android:textSize="@dimen/mycollect_text_type" />
	
	             <TextView
	                 android:id="@+id/resource_tv_name"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="@dimen/font_to_font_diver_my_collect_text"
	                 android:text="王志文老师"
	                 android:textColor="@color/font_darkgray"
	                 android:textSize="@dimen/mycollect_text_type" />
	         </LinearLayout>
	         <LinearLayout
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
				 android:layout_marginTop="6dp"
	             android:orientation="horizontal" >
	
	             <TextView
					 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="开课时间"
	                 android:textColor="@color/font_darkgray"
	                 android:textSize="@dimen/mycollect_text_type" />
	
	             <TextView
	                 android:id="@+id/resource_tv_time"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="@dimen/font_to_font_diver_my_collect_text"
	                 android:text="08-01  14:00"
	                 android:textColor="@color/font_darkgray"
	                 android:textSize="@dimen/mycollect_text_type" />
	         </LinearLayout>
	     </LinearLayout>
	</LinearLayout>
</LinearLayout>