<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_lightyellow"
    android:orientation="vertical" >

    <include
        layout="@layout/title" />

    <!-- 我的账户四大功能 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical" >

        <!-- 头像 -->

        <RelativeLayout
            android:id="@+id/mydeetail_item_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:padding="@dimen/mydetail_content_padding" >

            <com.wcyc.zigui2.widget.RoundImageView
                android:id="@+id/mydetail_item_icon_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/mydetail_line_magrin"
                android:layout_marginRight="@dimen/mydetail_line_magrin"
                android:layout_toLeftOf="@+id/mydetail_item_arrow"
                weichuyoucai:src="@drawable/defaulticon"
                weichuyoucai:type="circle" />

            <ImageView
                android:id="@+id/mydetail_item_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/mydetail_item_touxiang"
                android:layout_marginRight="@dimen/mydetail_content_margin_right"
                android:src="@drawable/my_corner" />

            <TextView
                android:id="@+id/mydetail_item_touxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/mydetail_item_touxiang"
                android:textColor="@color/font_black"
                android:textSize="@dimen/three_text_type" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:background="@color/line_darkyellow" />

        <!-- 手机号码 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/backgroud_white"
            android:padding="@dimen/mydetail_content_padding" >

            <TextView
                android:id="@+id/mydetail_item_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/mydetail_item_phone"
                android:textColor="@color/font_black"
                android:textSize="@dimen/three_text_type" />

            <TextView
                android:id="@+id/mydetail_item_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/mydetail_item_phone_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="55dp"
                android:textColor="@color/font_darkgray"
                android:textSize="@dimen/three_text_type" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:background="@color/line_darkyellow" />
        <!-- 邮箱 -->

        <RelativeLayout
            android:id="@+id/mydeetail_item_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_item_hight"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:padding="@dimen/mydetail_content_padding" >

            <TextView
                android:id="@+id/mydeetail_item_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/mydetail_item_email"
                android:textColor="@color/font_black"
                android:textSize="@dimen/three_text_type" />

            <TextView
                android:id="@+id/mydeetail_item_email_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/mydeetail_item_email_text"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mydetail_content_padding"
                android:layout_toLeftOf="@+id/mydetail_item_email_arrow"
                android:textColor="@color/font_darkgray"
                android:textSize="@dimen/three_text_type" />

            <ImageView
                android:id="@+id/mydetail_item_email_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mydetail_content_margin_right"
                android:src="@drawable/my_corner" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:background="@color/line_darkyellow" />

        <!-- 密码 -->

        <RelativeLayout
            android:id="@+id/mydeetail_item_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_item_hight"
            android:background="@drawable/item_selector"
            android:gravity="center"
            android:padding="@dimen/mydetail_content_padding" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/mydetail_item_passworld"
                android:textColor="@color/font_black"
                android:textSize="@dimen/three_text_type" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mydetail_content_margin_right"
                android:src="@drawable/my_corner" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:background="@color/line_darkyellow" />
        
    </LinearLayout>

    <!-- 头像展示 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical" >
 <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:background="@color/line_darkyellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nomar_margin"
            android:layout_marginTop="@dimen/nomar_margin"
            android:paddingLeft="@dimen/nomar_margin"
            android:text="@string/mydetail_icon_text"
            android:textColor="@color/font_black"
            android:textSize="@dimen/three_text_type" />

        <GridView
            android:id="@+id/mydetail_gv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/nomar_margin"
            android:layout_marginRight="@dimen/nomar_margin"
            android:layout_marginTop="@dimen/mydetail_content_padding"
            android:background="@color/white"
            android:listSelector="@drawable/item_selector" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>