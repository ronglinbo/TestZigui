<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/backgroud_white"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_darkyellow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
		<LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/message_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/common_bg" 
                android:drawableTop="@drawable/first_pager_selector" 
                android:text="消息"
                android:textSize="@dimen/bottom_button_text"
                android:textColor="@color/font_darkgray"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/service_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/common_bg" 
                android:drawableTop="@drawable/service_pager_selector"
                android:text="服务"
                android:textSize="@dimen/bottom_button_text"
                android:textColor="@color/font_gray"/>
        </LinearLayout>
        
		<LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/quick_pager"
                android:layout_width="@dimen/tab_btn_width"
                android:layout_height="@dimen/tab_btn_height"
                android:background="@drawable/tab_fabu" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/friend_pager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/common_bg"  
                    android:drawableTop="@drawable/friend_pager_selector"
                    android:text="发现"
                    android:textSize="@dimen/bottom_button_text"
                    android:textColor="@color/font_gray"/>

                <TextView
                    android:id="@+id/unread_msg_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-10dip"
                    android:layout_toRightOf="@id/friend_pager"
                    android:background="@drawable/red_circle"
                    android:gravity="center"
                    android:text="7"
                    android:visibility="invisible"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/my_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/common_bg"
                android:drawableTop="@drawable/my_pager_selector"
                android:text="我"
                android:textSize="@dimen/bottom_button_text"
                android:textColor="@color/font_gray"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>