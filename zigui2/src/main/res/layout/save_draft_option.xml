<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="5dp"
	android:orientation="vertical"
	>
	<LinearLayout
		android:id="@+id/cancel_btn"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:background="@drawable/bg_round_rect"
		android:layout_marginLeft="@dimen/content_to_bord"
		android:layout_marginRight="@dimen/content_to_bord"
		android:layout_marginBottom="@dimen/content_to_bord"
		android:layout_alignParentBottom="true"
		android:gravity="center">
		<TextView
			android:id="@+id/cancel"
			android:layout_width="fill_parent"
			android:layout_height="30dp"
			android:textColor="@color/font_darkblue"
			android:text="取消"
			android:textSize="18sp"
			android:gravity="center"/>
	</LinearLayout>

	<View
		android:id="@+id/blank"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/nomar_margin"
		android:layout_above="@id/cancel_btn"/>

	<LinearLayout
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:background="@drawable/bg_round_rect"
		android:orientation="vertical"
		android:layout_above="@+id/blank"
		android:layout_alignLeft="@+id/cancel_btn"
		android:layout_alignRight="@+id/cancel_btn">

	 	<TextView
	 	    android:id="@+id/save_draft"
	 	    android:layout_width="fill_parent"
	 	    android:layout_height="40dp"
	 	    android:text="保存草稿"
	 	    android:textSize="18sp"
	 	    android:gravity="center"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="@color/light_gray"/>
	 	<TextView
	 	    android:id="@+id/not_save_draft"
	 	    android:layout_width="fill_parent"
	 	    android:layout_height="40dp"
	 	    android:layout_below="@id/save_draft"
	 	    android:text="不保存草稿"
	 	    android:textSize="18sp"
	 	    android:gravity="center"/>
	</LinearLayout>

	<View
		android:id="@+id/blank1"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/nomar_margin"
		android:layout_above="@id/cancel_btn"/>

</RelativeLayout>

