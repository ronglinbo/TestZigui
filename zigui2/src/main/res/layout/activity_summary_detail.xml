<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include
        android:id="@+id/my_title"
        layout="@layout/new_title"/>
    <ScrollView 
        android:layout_width="match_parent"
       	android:layout_height="match_parent">
	    <LinearLayout 
	        android:id="@+id/email_body"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:layout_weight="1">
	        
			<TextView 
			    android:id="@+id/title"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/my_title"
			    android:layout_centerInParent="true"
			    android:textSize="@dimen/three_text_type"
			    android:paddingLeft="@dimen/content_to_bord"
			    android:paddingRight="@dimen/content_to_bord"/>
			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" 
			    android:padding="@dimen/content_to_bord">
				<Button android:id="@+id/type"
				    android:layout_width="60dp"
				    android:layout_height="20dp"
				    android:textSize="@dimen/field_textsize"
				    android:background="@drawable/btn_type_good"
					android:textColor="@color/backgroud_white"
				    android:text="类型"/>
				<ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:src="@drawable/list_icon_yiyue"
					android:layout_toLeftOf="@+id/read_times"
				    android:paddingLeft="@dimen/content_to_bord"/>
				<TextView
				    android:id="@+id/read_times"
				    android:text="18"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="right"
				    android:textColor="@color/font_darkgray"
				    android:layout_alignParentRight="true"
				    android:paddingRight="@dimen/content_to_bord"/>
			</RelativeLayout>
			

			<WebView 
			    android:id="@+id/html_content"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/read_times"
			    android:background="@color/backgroud_white"
			    android:textSize="@dimen/mycollect_text_type"
			    android:layout_marginLeft="8dp"
			    android:layout_marginRight="8dp"/>
			<LinearLayout
			    android:id="@+id/attach_ll"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
				android:layout_marginLeft="@dimen/content_to_bord"
				android:layout_marginRight="@dimen/content_to_bord"
			    android:visibility="gone">

				<com.wcyc.zigui2.widget.MyListView
				    android:id="@+id/attach_list"
				    android:layout_width="wrap_content"
				    android:layout_height="match_parent"/>
			</LinearLayout>
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" 
			    android:padding="@dimen/content_to_bord">
			<TextView
			    android:id="@+id/desc"
			    android:text="描述"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="@color/font_darkgray"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
