<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:orientation="vertical" >

    <!-- android:layout_marginTop="5dp" -->

    <View
    	android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_hight"
        android:background="@color/line_darkyellow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroud_white"
        android:gravity="center" >

        <TextView
            android:id="@+id/new_duty_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:text="1" />

        <TextView
            android:id="@+id/new_duty_diary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/zgd_margin_right"
            android:background="@drawable/btn_zhibandengji_n"
            android:gravity="center"
            android:textSize="13sp"
            android:text="2"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/new_duty_man_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_duty_time"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:textSize="14sp"
            android:text="3"
            android:textColor="@color/blue" />

        <ImageView
            android:id="@+id/new_duty_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sign_jintian" />
    </RelativeLayout>

    <View
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_hight"
        android:background="@color/line_darkyellow" />

</LinearLayout>