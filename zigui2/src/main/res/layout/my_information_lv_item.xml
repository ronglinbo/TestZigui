<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minHeight="50dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:fadingEdge="none"
        
        android:layout_height="@dimen/my_information_item_iv"
        android:layout_marginLeft="@dimen/bord_space_between"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/firstpager_my_iv"
            android:layout_width="@dimen/teacher_my_icon_hight"
            android:layout_height="@dimen/teacher_my_icon_hight"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/nomar_margin"
            />

        <TextView
            android:id="@+id/my_information_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bord_space_between"
            android:layout_toRightOf="@+id/firstpager_my_iv"
            android:textColor="@color/font_black"
            android:textSize="@dimen/three_text_type" />

        <ImageView
            android:id="@+id/my_information_item_newmessage_red"
            android:layout_width="@dimen/newmessage_red"
            android:layout_height="@dimen/newmessage_red"
            android:layout_toRightOf="@+id/my_information_item_tv"
            android:src="@drawable/my_information_item_newmessage_red"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/my_information_item_message_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/font_lightgray"
            android:textSize="@dimen/three_text_type" />
        <ImageView
            android:id="@+id/my_information_item_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/my_corner"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>