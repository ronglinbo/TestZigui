<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_top_bar"
    android:background="#f5f5f5"
    android:gravity="center_vertical" >

    <LinearLayout
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/content_to_bord"
        android:gravity="center" >

        <TextView
            android:id="@+id/title2_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/blue"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/new_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="@color/font_black"
        android:textSize="@dimen/first_text_type" />

    <TextView
        android:id="@+id/title2_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/content_to_bord"
        android:text="确定"
        android:textColor="#007aff"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_hight"
        android:background="@color/line_darkyellow_biaozhu"
        android:layout_alignParentBottom="true" />

</RelativeLayout>