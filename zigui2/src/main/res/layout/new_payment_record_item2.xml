<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f9"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_renew_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="一学年服务"
            android:textSize="15sp"
            android:textColor="#212121"/>
        <TextView 
            android:id="@+id/tv_record_ordertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#212121"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号："
            android:textSize="14sp"
            android:textColor="#666666"
             />
        <TextView 
            android:id="@+id/tv_record_ordernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="54542369875412365"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值时间："
            android:textSize="14sp"
            android:textColor="#666666"
             />
        <TextView 
            android:id="@+id/payment_start_stop_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingLeft="10dp"/>
        
    </LinearLayout>
    
     <RelativeLayout
         android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_payment_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:textSize="18sp"
            android:textColor="#ff4f57"
             />
        <TextView
            android:layout_toRightOf="@id/tv_payment_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".00"
            android:textSize="15sp"
            android:textColor="#ff4f57"
            android:layout_marginTop="2dp"
            android:visibility="gone"
             />
        <TextView 
            android:id="@+id/tv_repayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/payment_continue"
            android:textColor="@color/font_blue"
            android:src="@drawable/new_wait_pay"
            />
    </RelativeLayout>

</LinearLayout>