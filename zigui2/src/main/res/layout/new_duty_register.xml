<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <include
        android:layout_height="0dip"
        android:layout_weight="0"
        layout="@layout/new_title2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/teacher_firstpager_ll_height"
                android:background="@color/backgroud_white"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:text="值班人:" />

                <TextView
                    android:id="@+id/duty_man_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:textColor="#666666"
                    android:text="1" />

                <TextView
                    android:id="@+id/duty_man_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:textColor="#666666"
                    android:text="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_hight"
                android:background="@color/line_darkyellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/zgd_margin_right"
                android:layout_marginTop="10dp"
                android:text="早自习情况记录"
                android:textColor="#999999" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_hight"
                android:background="@color/line_darkyellow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/backgroud_white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:text="学生" />

                <EditText
                    android:id="@+id/morning_study_sdudent_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/zgd_margin_right"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/shape_edittext_border_color"
                    android:gravity="left"
                    android:hint="选填..."
                    android:maxLength="400"
                    android:textSize="14sp"
            		android:textColorHint="#cccccc"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/backgroud_white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:text="老师" />

                <EditText
                    android:id="@+id/morning_study_teacher_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:layout_marginRight="@dimen/zgd_margin_right"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/shape_edittext_border_color"
                    android:gravity="left"
                    android:hint="选填..."
                    android:maxLength="400"
                    android:textSize="14sp"
            		android:textColorHint="#cccccc"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_hight"
                android:background="@color/line_darkyellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/zgd_margin_right"
                android:layout_marginTop="10dp"
                android:text="上课期间情况记录"
                android:textColor="#999999" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_hight"
                android:background="@color/line_darkyellow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/backgroud_white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:text="学生" />

                <EditText
                    android:id="@+id/inclass_study_sdudent_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:layout_marginRight="@dimen/zgd_margin_right"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/shape_edittext_border_color"
                    android:gravity="left"
                    android:hint="选填..."
                    android:maxLength="400"
                    android:textSize="14sp"
            		android:textColorHint="#cccccc"
                    android:text="" />
            </LinearLayout>

            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/backgroud_white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:text="老师" />

                <EditText
                    android:id="@+id/inclass_study_teacher_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:layout_marginRight="@dimen/zgd_margin_right"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/shape_edittext_border_color"
                    android:gravity="left"
                    android:hint="选填..."
                    android:maxLength="400"
                    android:textSize="14sp"
            		android:textColorHint="#cccccc"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_hight"
                android:background="@color/line_darkyellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/zgd_margin_right"
                android:layout_marginTop="10dp"
                android:text="晚自习情况记录"
                android:textColor="#999999" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_hight"
                android:background="@color/line_darkyellow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/backgroud_white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:text="学生" />

                <EditText
                    android:id="@+id/evening_study_sdudent_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:layout_marginRight="@dimen/zgd_margin_right"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/shape_edittext_border_color"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:hint="选填..."
                    android:maxLength="400"
            		android:textColorHint="#cccccc"
                    android:text="" />
            </LinearLayout>

 

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/backgroud_white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:text="老师" />

                <EditText
                    android:id="@+id/evening_study_teacher_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:layout_marginRight="@dimen/zgd_margin_right"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/shape_edittext_border_color"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:hint="选填..."
                    android:maxLength="400"
            		android:textColorHint="#cccccc"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_hight"
                android:background="@color/line_darkyellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/zgd_margin_right"
                android:layout_marginTop="10dp"
                android:text="学校大事记载"
                android:textColor="#999999" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_hight"
                android:background="@color/line_darkyellow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/backgroud_white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:visibility="invisible"
                    android:text="老师" />

                <EditText
                    android:id="@+id/school_event_record_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/zgd_margin_right"
                    android:layout_marginRight="@dimen/zgd_margin_right"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/shape_edittext_border_color"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:hint="选填..."
                    android:maxLength="400"
            		android:textColorHint="#cccccc"
                    android:text="" />
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_hight"
                android:layout_marginBottom="35dp"
                android:background="@color/line_darkyellow" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>