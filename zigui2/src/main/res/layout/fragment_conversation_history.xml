<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/title_bg_color"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="贵友圈"
            android:textColor="#fff"
            android:textSize="@dimen/first_text_type" />

        <RelativeLayout
            android:id="@+id/goContactsList"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_tab_bg" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:scaleType="centerInside"
                android:src="@drawable/top_title_contatcts" />
        </RelativeLayout>
    </RelativeLayout>
    <!-- <include layout="@layout/search_bar" /> -->

    <include
        android:id="@+id/rl_error_item"
        layout="@layout/chat_neterror_item"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <com.wcyc.zigui2.chat.SlideListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/font_white"
            android:listSelector="@drawable/item_selector"
            android:cacheColorHint="#00000000"
            android:divider="@color/divider_list"
            android:dividerHeight="1px" />

        <TextView
            android:id="@+id/tv_no_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableTop="@drawable/icon_message_none"
            android:layout_centerInParent="true"
            android:drawablePadding="10dip"
            android:text="@string/flistview_tv_no_message"
            android:textColor="@color/font_darkgray"
            android:textSize="@dimen/three_text_type"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>