<?xml version="1.0" encoding="utf-8"?>
<!-- xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto" -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" >
        <com.wcyc.zigui2.utils.CircleImageView
            android:id="@+id/one_class_dynamics_civ"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/head_class"
           />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent" >

        <!--
    <com.wcyc.zigui2.widget.RoundImageView
        android:id="@+id/author_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        weichuyoucai:src="@drawable/defaulticon"
        weichuyoucai:type="circle" />
        -->


        <!--
        RelativeLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/author_icon"
        -->

        <RelativeLayout
            android:id="@+id/ll_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/one_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/three_text_type" />
            
            <TextView 
                android:id="@+id/mew_bjmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#999999"
                android:text="1111班"
                android:layout_toRightOf="@id/author_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/one_author_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="14dp"
                android:text="删除"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/three_text_type" />
        </RelativeLayout>

        <TextView
            android:id="@+id/new_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_author"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/font_black"
            android:textSize="@dimen/three_text_type" />

        <LinearLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/new_message_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <com.wcyc.zigui2.widget.NoScrollGridView
                android:id="@+id/one_gridView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:horizontalSpacing="2dp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="2dp" />

            <!--
              GridView
		      android:id="@+id/gridView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1dp"/
            -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/grid"
                >

                <TextView
                    android:id="@+id/one_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="1111"
                    android:textSize="@dimen/four_text_type" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/message_ll_comment"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/new_message_support"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/new_love_no" />

                    <TextView
                        android:id="@+id/message_support_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="赞"
                        android:textColor="#01aef0"
                        android:textSize="@dimen/four_text_type"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/goodNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="(0)"
                        android:textColor="#01aef0"
                        android:textSize="@dimen/four_text_type"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                     android:layout_marginLeft="5dp"
                    android:id="@+id/message_ll_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/message_comment_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/new_pinglun" />

                    <TextView
                        android:id="@+id/message_comment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="评论"
                        android:textColor="#01aef0"
                        android:textSize="@dimen/four_text_type"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/pointNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="(0)"
                        android:textColor="#01aef0"
                        android:textSize="@dimen/four_text_type" 
                        android:visibility="gone"/>
                    
                    <ImageView
                         android:layout_marginLeft="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/new_shoucang_no" />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/new_fenxiang_on" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/message_ll_support_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/message_support_count_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/new_love_ok"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/message_support_count_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/font_blue"
                    android:textSize="@dimen/four_text_type" 
                    android:visibility="gone"/>
				   <GridView
		      	android:id="@+id/new_goodlove_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:horizontalSpacing="1dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1dp"/>
            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_darkyellow" />

            <com.wcyc.zigui2.widget.MyListView
                android:id="@+id/one_message_comment_lv"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:divider="@null"
                android:listSelector="#00000000" />
        </LinearLayout>
    </RelativeLayout>
    <!-- /RelativeLayout -->

</LinearLayout>