<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
	    <com.wcyc.zigui2.newapp.widget.RefreshListView
	        android:id="@+id/email_list"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/font_white"
	        android:listSelector="@drawable/item_selector"
	        android:cacheColorHint="#00000000"
	        android:divider="@color/backgroud_lightyellow"
	        android:dividerHeight="@dimen/line_hight" />
    </RelativeLayout>
	
    <TextView
        android:id="@+id/tv_no_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/shuju_no"
        android:drawablePadding="10dip"
        android:textColor="@color/font_darkgray"
        android:textSize="@dimen/three_text_type"
        android:visibility="gone"/>

</RelativeLayout>
