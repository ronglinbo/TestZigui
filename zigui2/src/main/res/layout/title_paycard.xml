<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_top_bar"
    android:background="@color/title_bg_color"
    android:gravity="center_vertical" >

    <LinearLayout
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center" >

        <!-- android:drawableLeft="@drawable/titlebtndra_selector"
        android:textColor="@drawable/title_text_selector"
         -->
        <ImageView 
            android:id="@+id/title_arrow_iv"
            android:layout_height="@dimen/title_arrow_iv"
            android:layout_width="wrap_content"
            android:src="@drawable/top_back1"
            />

        <Button
            android:id="@+id/title_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="@color/font_white"
            android:textSize="@dimen/titleback_text_type" />

    </LinearLayout>

    <TextView
        android:id="@+id/title_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:text="@string/title_text_2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/first_text_type"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/title_imgbtn_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:background="@drawable/title_plus_selector"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_imgbtn_accomplish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:text="@string/title_imgbtn_accomplish"
        android:textColor="@color/font_white"
        android:textSize="@dimen/first_text_type"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/title_btn_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:text="@string/title_btn_invite"
        android:textColor="@color/font_white"
        android:textSize="17sp"
        android:gravity="center"
        android:visibility="gone"
        />

</RelativeLayout>