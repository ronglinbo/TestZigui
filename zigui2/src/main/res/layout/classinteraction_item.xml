    <!--RelativeLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/author_icon" -->

        <RelativeLayout
            android:id="@+id/ll_author"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/font_blue"
                android:textSize="@dimen/three_text_type" />

            <TextView
                android:id="@+id/author_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="14dp"
                android:text="删除"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/three_text_type" />
        </RelativeLayout>

        <TextView
            android:id="@+id/message_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_author"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/font_black"
            android:textSize="@dimen/three_text_type" />

        <LinearLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/message_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
		 
            <com.wcyc.zigui2.widget.NoScrollGridView
                android:id="@+id/gridView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:horizontalSpacing="2dp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="2dp" />
		 
		 <!-- GridView
		      android:id="@+id/gridView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1dp"/-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" >
		
                <TextView
                    android:id="@+id/message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textSize="@dimen/four_text_type" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/message_ll_comment"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/message_support"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/support_nomal" />

                    <TextView
                        android:id="@+id/message_support_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="赞"
                        android:textSize="@dimen/four_text_type" 
                        android:textColor="#01aef0"/>
                    <TextView 
                        android:id="@+id/goodNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="(0)"
                        android:textSize="@dimen/four_text_type"
                        android:textColor="#01aef0"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/message_ll_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/message_comment_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/comment" />

                    <TextView
                        android:id="@+id/message_comment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="评论"
                        android:textSize="@dimen/four_text_type"
                        android:textColor="#01aef0" />
                    <TextView 
                        android:id="@+id/pointNum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="(0)"
                        android:textSize="@dimen/four_text_type"
                        android:textColor="#01aef0"
                        />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/message_ll_support_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/message_support_count_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/support_selector"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/message_support_count_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/font_blue"
                    android:textSize="@dimen/four_text_type" />
            </LinearLayout>
            
               <View
                   android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_darkyellow" 
        />

            <com.wcyc.zigui2.widget.MyListView
                android:id="@+id/message_comment_lv"
                android:layout_width="wrap_content"
                android:layout_height="2dp" 
                android:listSelector="#00000000"
                android:divider="@null"/>
        </LinearLayout>
    <!--/RelativeLayout-->

</RelativeLayout>