<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:weichuyoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/loginactivity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="47dp"
            android:layout_weight="1"
            android:src="@drawable/login_logo" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/loginactivity_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginactivity_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="-35dp"
                android:layout_weight="0"
                android:src="@drawable/login_icon2" />

            <EditText
                android:id="@+id/loginactivity_name_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="45dp"
                android:layout_weight="1"
                android:layout_alignLeft="@+id/userName"
                android:digits="0123456789-@"
                android:drawablePadding="10dp"
                android:hint="@string/fogetpassworld_phoneNumber"
                android:textSize="@dimen/item_text_size"
                android:inputType="phone"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/loginactivity_name_et_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:src="@drawable/close"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="-35dp"
                android:src="@drawable/login_icon" />

            <EditText
                android:id="@+id/loginactivity_password_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="45dp"
                android:layout_weight="1"
                android:hint="@string/login_inputpasword"
                android:inputType="textPassword"
                android:textSize="@dimen/item_text_size"
                android:maxLength="20"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/loginactivity_password_et_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-45dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:src="@drawable/close"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    

    <TextView
        android:id="@+id/loginactivity_tv_forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/loginactivity_btn_login"
        android:layout_below="@+id/loginactivity_et"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/nomar_margin"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/login_password"
        android:textColor="@color/font_darkblue"
        android:textSize="@dimen/reminder_text" />
    
	<Button
        android:id="@+id/loginactivity_btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edite_heigh"
        android:layout_alignLeft="@+id/loginactivity_et"
        android:layout_alignRight="@+id/loginactivity_et"
        android:layout_below="@+id/loginactivity_tv_forgetpassword"
        android:layout_marginTop="10dp"
        android:background="@drawable/only_login_selector"
        android:text="@string/login_button"
        android:textColor="@color/font_white"
        android:textSize="@dimen/mycollect_text_type" />

    <LinearLayout
        android:id="@+id/service_agreement"
        android:layout_marginBottom="@dimen/item_hight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/reminder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录即代表阅读并同意"/>
        <TextView
            android:textSize="@dimen/reminder_text"
            android:textColor="@color/text_color"
            android:text="“服务协议”"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>