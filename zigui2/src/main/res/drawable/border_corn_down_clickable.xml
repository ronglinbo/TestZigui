<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 底部有圆角的背景图片 -->
    <item android:state_pressed="true"><shape>
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"
                android:topRightRadius="0.1dp" android:topLeftRadius="0.1dp" />

            <stroke android:width="1px" android:color="#dcdcdc" />

            <solid android:color="@color/backgroud_darktyellow" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"
                android:topRightRadius="0.1dp" android:topLeftRadius="0.1dp" />

            <stroke android:width="1px" android:color="#dcdcdc" />

            <solid android:color="@color/backgroud_white" />
        </shape></item>

</selector>